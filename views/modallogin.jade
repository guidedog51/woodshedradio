div(id='modal-login', class='modal fade', style='width: 360px')
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                button(type='button', class='close', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4(id='lblTitle', class='modal-title')  Admin Login
            div(class='modal-body')
                form(class="form col-md-12 center-block")
                    div(class="form-group")
                        input(class="form-control input-xlarge", placeholder="Email", type="text", style='margin-bottom: 10px !important;')
                    div(class="form-group")
                        input(class="form-control input-xlarge", placeholder="Password", type="password")
                    div(class="form-group")
                        button(class="btn btn-primary")  Sign In

            div(class='modal-footer')
                div(class='col-md-12')
                    button(class="btn", data-dismiss="modal", aria-hidden="true") Cancel


