div(id='modal-merge-playlists', class='modal fade')
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                button(type='button', class='close', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                h4(id='lblTitleMerge', class='modal-title')  Merge Playlists
            div(class='modal-body' style='display:block; overflow:auto;')
                #mergeBar
                    div(class='showlist-container')
                        div(class='input-group')
                            label(id='save-merged-playlist', for='playlist-name', style="margin-bottom:2px;", class='btn btn-default ladda-button', data-toggle='dropdown', data-style='expand-left', data-spinner-color="#46a546") Merge Playlist
                                span(class="ladda-label")
                            input(id='merged-playlist-name', type='text', class='merge-input', placeholder='enter a name for the combined playlist', required)

                #plContainer(class='show-container')
                    ul(id='saved-merge-playlists')
                        li Select a date above to see shows, artists, and songs
                #plMergeContainer(class='show-container')
                    ul(class='showList', id='playlists-to-merge')
                        li Drag songs for the show into this container -- drag to trash container to remove



            div(class='modal-footer')
                div(class='col-md-12')
                    button(class="btn", data-dismiss="modal", aria-hidden="true") Cancel


